package gui;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

/**
 * Starting point for user input to the Gaga GUI
 * application. Creates all listeners.
 *
 * @author Ian Barnes (written for Oops)
 * @author Chris Johnson (update for Gaga)
 * @version $Revision: 1532 $, $Date: 2011-05-04 11:51:55 +1000 (Wed, 04 May 2011) $
 */
public class Controller {

    public Controller(Model m, View v){
	model = m;
	view = v;
    }

    Model model;
    View view;

    /** set a scaling factor for views
     * 
     * @param scaleFactor relative to default pixel coordinates = 1.0
     */
    public void setScale(double scaleFactor) {
    	view.setScale(scaleFactor);
    }
}



