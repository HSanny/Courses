## read one line from input stream at each iteration
while read line 
do
    ## Since the indent was ommited by read command
    ##, we just need to analyse the first character
    firstChar=${line:0:1}
    if [[ $firstChar = "/" ]]; then ## single line comment
        continue 
    elif [[ $firstChar = "*" ]]; then ## multiple line comment
        continue
    elif [[ $firstChar = "{" ]]; then ## only left brace 
        continue
    elif [[ $firstChar = "}" ]]; then ## only right brace
        continue
    elif [[ $firstChar = "" ]]; then ## blank line
        continue
    else
        echo $line ## return current line for NCNB line
    fi
done 
